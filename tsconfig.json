{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"declaration": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"emitDecoratorMetadata": true,
		"plugins": [],
		"paths": {
			"@/*": ["./*"]
		},
		"outDir": "./dist"
	},
	"include": ["lib/**/*", "index.ts"],
	"exclude": ["node_modules", "dist"]
}
