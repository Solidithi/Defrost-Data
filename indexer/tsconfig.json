{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "lib",
		"module": "commonjs",
		"target": "es2020",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"node_modules/**/*",
		"**/node_modules/**",
		"lib"
	]
}
